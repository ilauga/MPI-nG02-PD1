<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="lv.ievalauga.pakalpojumuportals.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_servicesFragment"
            app:destination="@id/servicesFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="lv.ievalauga.pakalpojumuportals.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_userHomeFragment"
            app:destination="@id/userHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_specialistHomeFragment"
            app:destination="@id/specialistHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="lv.ievalauga.pakalpojumuportals.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="lv.ievalauga.pakalpojumuportals.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_serviceInfoFragment"
            app:destination="@id/serviceInfoFragment" />
        <action
            android:id="@+id/action_searchFragment_to_specialistsFragment"
            app:destination="@id/specialistsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="lv.ievalauga.pakalpojumuportals.UserProfile"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/specialistsFragment"
        android:name="lv.ievalauga.pakalpojumuportals.SpecialistsFragment"
        android:label="fragment_specialists"
        tools:layout="@layout/fragment_specialists" />
    <fragment
        android:id="@+id/userHomeFragment"
        android:name="lv.ievalauga.pakalpojumuportals.UserHomeFragment"
        android:label="fragment_user_home"
        tools:layout="@layout/fragment_user_home" >
        <action
            android:id="@+id/action_userHomeFragment_to_userProfile"
            app:destination="@id/servicesFragment" />
        <action
            android:id="@+id/action_userHomeFragment_to_userProfile2"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_userHomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/specialistHomeFragment"
        android:name="lv.ievalauga.pakalpojumuportals.SpecialistHomeFragment"
        android:label="fragment_specialist_home"
        tools:layout="@layout/fragment_specialist_home" />
    <fragment
        android:id="@+id/serviceInfoFragment"
        android:name="lv.ievalauga.pakalpojumuportals.ServiceInfoFragment"
        android:label="fragment_service_info"
        tools:layout="@layout/fragment_service_info" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="lv.ievalauga.pakalpojumuportals.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" >
        <action
            android:id="@+id/action_servicesFragment_to_serviceInfoFragment"
            app:destination="@id/serviceInfoFragment" />
        <action
            android:id="@+id/action_servicesFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
</navigation>